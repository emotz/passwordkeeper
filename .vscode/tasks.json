{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "install",
            "args": [
                "install"
            ]
        },
        {
            "taskName": "test",
            "args": [
                "test"
            ],
            "isTestCommand": true,
            "problemMatcher": [
                "$eslint-stylish",
                {
                    "owner": "javascript",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.*) \\((\\d+),(\\d+)\\): error WEBPACK: Error: (.*) in .*$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "message": 4
                        }
                    ]
                },
                {
                    "owner": "jasmine",
                    "fileLocation": [
                        "relative",
                        "${workspaceRoot}/fe/tests"
                    ],
                    "pattern": [
                        {
                            "regexp": "^\t(.*)$",
                            "message": 1
                        },
                        {
                            "regexp": "^.*webpack:\\/\\/\\/(.*):(.*:.*) <- .*$",
                            "file": 1,
                            "location": 2
                        }
                    ]
                },
                {
                    "owner": "wdio",
                    "pattern": [
                        {
                            "regexp": "^\\d+\\) (.*):$",
                            "file": 1,
                            "line": 1
                        },
                        {
                            "regexp": "^Failed: (.*)$",
                            "message": 1
                        }
                    ]
                }
                // {
                //     "owner": "jasmine",
                //     "pattern": [
                //         {
                //             "regexp": "^.*\\(Windows .*\\) (.*) FAILED$",
                //             "message": 1,
                //             "file": 1,
                //             "line": 1
                //         }
                //     ]
                // }
            ]
        },
        {
            "taskName": "build",
            "isBuildCommand": true,
            "args": [
                "run",
                "build"
            ],
            "problemMatcher": [
                "$eslint-stylish",
                {
                    "owner": "javascript",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.*) \\((\\d+),(\\d+)\\): error WEBPACK: Error: (.*) in .*$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "message": 4
                        }
                    ]
                }
            ]
        }
        // {
        //     "taskName": "watch:build",
        //     "isBuildCommand": true,
        //     "args": [
        //         "run",
        //         "watch:build"
        //     ],
        //     "isBackground": true
        //     // "problemMatcher": [
        //     //     {
        //     //         "owner": "javascript",
        //     //         "fileLocation": "absolute",
        //     //         "pattern": [
        //     //             {
        //     //                 "regexp": "^([^\\s].*)$",
        //     //                 "file": 1
        //     //             },
        //     //             {
        //     //                 "regexp": "^\\s+(\\d+):(\\d+)\\s+(error|warning|info)\\s+(.*)\\s\\s+(.*)$",
        //     //                 "line": 1,
        //     //                 "column": 2,
        //     //                 "severity": 3,
        //     //                 "message": 4,
        //     //                 "code": 5,
        //     //                 "loop": true
        //     //             }
        //     //         ],
        //     //         "watching": {
        //     //             "activeOnStart": false,
        //     //             "beginsPattern": "^Build started\\.$",
        //     //             "endsPattern": "^Build finished\\. \\(\\d+ms\\)$"
        //     //         }
        //     //     }
        //     // ]
        // }
    ]
}
