FROM passwordkeeper/base-e2e:0.l

# Create app directory
WORKDIR /usr/src/passwordkeeper/e2e

# Install app dependencies
COPY e2e/package.json .
RUN npm install

COPY e2e .
COPY wait-for-it.sh ../
ENTRYPOINT ["bash", "../wait-for-it.sh", "-t", "30", "test-server:1337", "--"]
CMD ["npm", "run", "test"]
